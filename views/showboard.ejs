<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= user.username %> on PicParadise</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <script src="/js/jquery-2.1.4.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <div>
            <h1><%= board.title.toUpperCase() %></h1>
        </div>
        <div>
            <% if(board.pins.length === 1) { %>
                <p><%= board.pins.length %> Pin</p>
            <% } else { %>
                <p><%= board.pins.length %> Pins</p>
            <% } %>
        </div>
        <div class="row">
            <% board.pins.forEach(function (pin) { %>
                <div class="col-sm-6 col-md-3">
                    <div class="thumbnail">
                        <img src="https://d1uev2sppo24zv.cloudfront.net/<%= pin %>" alt="">
                        
                        <div class="caption">
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>